<% @body_id = "sign-up" %>

<section class="main">
	<div class="container">
	  <div class='progress'>
	    <div class='bar' style='width: 50%'></div>
	    <div class='progress-marker one'>
	      <div class='marker completed'></div>
	      <h4>Step 1</h4>
	    </div>
	    <div class='progress-marker two'>
	      <div class='marker current'></div>
	      <h4>Step 2</h4>
	    </div>
	    <div class='progress-marker three'>
	      <div class='marker'></div>
	      <h4>Step 3</h4>
	    </div>
	  </div>
	  <h2>Your Information</h2>
	  <%= form_for(@user, :url => { :action => "update2" }) do |f| %>
	    <% if @user.errors.any? %>
	      <div id="error_explanation">
	        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
	  
	        <ul>
	        <% @user.errors.full_messages.each do |msg| %>
	          <li><%= msg %></li>
	        <% end %>
	        </ul>
	      </div>
	    <% end %>
	    <fieldset class="half">
	      <%= f.label :first_name %>
	      <%= f.text_field :first_name %>
	    </fieldset>
	    <fieldset class="half right">
	      <%= f.label :last_name %>
	      <%= f.text_field :last_name %>
	    </fieldset>
	    <fieldset>
	      <%= f.label :business_name %>
	      <%= f.text_field :business_name %>
	    </fieldset>
	    <fieldset>
	      <%= f.label :address %>
	      <%= f.text_field :address %>
	    </fieldset>
	    <fieldset class="half">
	      <%= f.label :city %>
	      <%= f.text_field :city %>
	    </fieldset>
	    <fieldset class="quarter">
	      <%= f.label :state %>
	      <%= f.select :state, states %>
	      <!-- <#%= f.text_field :state %> -->
	    </fieldset>
	    <fieldset class="quarter right">
	      <%= f.label :zip %>
	      <%= f.number_field :zip %>
	    </fieldset>
	    <%= f.submit %>
	  <% end %>
	  <small><%= userhome %> &raquo;</small>
	</div>
</section>
